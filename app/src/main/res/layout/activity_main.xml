<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/play_audio_pause_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="110dp"
        android:alpha="0.4"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/pause_512"/>
    <ImageButton
        android:id="@+id/play_audio_start_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:alpha="0.4"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/play_512"/>

    <ImageButton
        android:id="@+id/play_audio_stop_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:alpha="0.4"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/stop_512"/>

    <ImageButton
        android:id="@+id/play_audio_browse_audio_file_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="-120dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/search_3_512"/>

    <TextView
        android:id="@+id/play_audio_file_path_editor"
        android:layout_width="430dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="Seçilen Dosya:"
        android:layout_marginLeft="-250dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/play_audio_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="-410dp"
        android:background="#000000"
        android:indeterminate="false"
        android:max="100"
        android:translationZ="-2dp"
        android:padding="20dp"
        android:progress="0"
        android:progressDrawable="@drawable/progress_limit"
        android:scaleY="3" />
    <Button
        android:id="@+id/zero_five_x"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:alpha="0.4"
        android:textSize="13dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="-380dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="230dp"
        android:text="1x"
        android:enabled="false"/>
    <Button
        android:id="@+id/zero_seven_x"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:alpha="0.4"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical|center_horizontal"

        android:layout_marginTop="230dp"
        android:text="1.2x"
        android:enabled="false"/>

    <Button
        android:id="@+id/one_x"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:backgroundTint="@color/white"
        android:alpha="0.4"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical|center_horizontal"

        android:layout_marginTop="230dp"
        android:text="1.5x"
        android:enabled="false"/>
    <Button
        android:id="@+id/one_five_x"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:backgroundTint="@color/white"
        android:alpha="0.4"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical|center_horizontal"

        android:layout_marginTop="230dp"
        android:text="1.7x"
        android:enabled="false"/>
    <Button
        android:id="@+id/two_x"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:alpha="0.4"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical|center_horizontal"

        android:layout_marginTop="230dp"
        android:text="2x"
        android:enabled="false"/>

    <ImageView
        android:id="@+id/girl"
        android:alpha="0.3"
        android:layout_width="430dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/girl"
        android:layout_marginLeft="-397dp"
        android:layout_height="350dp">

    </ImageView>
    <TextView
        android:id="@+id/title"
        android:layout_width="430dp"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:text=""
        android:alpha="0.5"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="475dp"
        android:layout_marginLeft="-420dp"

        android:gravity="center_horizontal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/haay_text"
        android:layout_width="430dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="HAAAAY İYİ DERSLERRRRRR ŞULEEEE"
        android:alpha="0.5"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="-440dp"

        android:gravity="center_horizontal"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/duration"
        android:layout_width="430dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:alpha="0.7"
        android:text=""
        android:translationZ="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="-435dp"

        android:gravity="center_horizontal"
        android:textAlignment="center" />


</LinearLayout>